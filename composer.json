{
    "name": "wieni/wmmedia",
    "type": "drupal-module",
    "description": "A media library for Drupal 8, built by Wieni",
    "license": "MIT",
    "authors": [
        {
            "name": "Wieni",
            "email": "info@wieni.be"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-dom": "*",
        "drupal/core": "^9.3 || ^10.0",
        "drupal/entity_browser": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "wieni/wmcodestyle": "^1.0"
    },
    "conflict": {
        "drupal/ckeditor5_entity_browser": "<1.0.2"
    },
    "repositories": {
        "drupal-composer": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "suggest": {
        "drupal/ckeditor5_entity_browser": "Allows embedding media (files) in CKEditor 5 using Entity Browser"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "coding-standards": [
            "@composer normalize",
            "php-cs-fixer fix --config=.php_cs.php"
        ]
    }
}
